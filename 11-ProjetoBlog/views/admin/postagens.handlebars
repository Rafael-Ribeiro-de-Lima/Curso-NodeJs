<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class='btn btn-success'>Nova Postagem</button></a>

{{#each postagens}}
    <div class='card mt-3'>
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>{{descricao}}</p>
            <small>Última modificação: {{data}}</small>
            <br>
            <small>Em {{categoria.nome}}</small>
            <br>
            <a href="/admin/postagens/edit/{{_id}}"><button class='btn btn-success mt-3'>Editar Postagem</button></a>
            <br>
            <a href="/admin/postagens/deletar/{{_id}}"><button class='btn btn-danger mt-2'>Deletar</button></a>
        </div>
    </div>
{{else}}
    <h5 class='mt-3'>Nenhuma postagem registrada!</h5>
{{/each}}